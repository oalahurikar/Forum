<p id="notice"><%= notice %></p>

<h1>Listing Forum Threads (Index Page)</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forum_threads.each do |forum_thread| %>
    
    <tr>
    <div class="card">
      <div class="card-body">
        <h2 class="card-title"><%= link_to forum_thread.subject, forum_thread %> </h2>
        <h3 class="card-subtitle mb-2 text-muted">Created by User id </a1><%= forum_thread.user_id %> </h3>
        <a1>Created at</a1><%= forum_thread.created_at %></a1>
        <button type="button" class="btn btn-light"> <%= link_to 'Edit', edit_forum_thread_path(forum_thread) %> </button>
        <button type="button" class="btn btn-danger"> <%= link_to 'Destroy', forum_thread, method: :delete, data: { confirm: 'Are you sure?' } %></button>
      </div>
    </div> 

    </tr>
       
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Forum thread', new_forum_thread_path %>
